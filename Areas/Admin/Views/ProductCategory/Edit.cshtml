@model Model.EF.ProductCategory

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Chỉnh sửa thông tin danh mục sản phẩm</h4>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
